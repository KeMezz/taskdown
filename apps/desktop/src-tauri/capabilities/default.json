{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA",
        "$APPDATA/**",
        "$APPDATA/.taskdown",
        "$APPDATA/.taskdown/**",
        "$APPCONFIG",
        "$APPCONFIG/**",
        "$APPCONFIG/.taskdown",
        "$APPCONFIG/.taskdown/**",
        "$APPLOCALDATA",
        "$APPLOCALDATA/**",
        "$APPLOCALDATA/.taskdown",
        "$APPLOCALDATA/.taskdown/**"
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select"
  ]
}
